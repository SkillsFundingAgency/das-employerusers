                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('supportAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('supportAppServiceName')]"
                    }
                }
            }
        },
        {
            "condition": "[and(greater(length(parameters('apiAppCustomHostName')), 0), parameters('deploySupportApp'))]",
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('supportAppServiceName'), '-app-service-certificate-', parameters('utcValue'))]",
            "resourceGroup": "[parameters('sharedEnvResourceGroup')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-certificate.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultCertificateName": {
                        "value": "[parameters('supportAppCertificateName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('sharedKeyVaultName')]"
                    },
                    "keyVaultResourceGroup": {
                        "value": "[parameters('sharedManagementResourceGroup')]"
                    }
                }
            }
        },
        {
            "condition": "[parameters('deploySupportApp')]",
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('supportAppServiceName'), '-', parameters('utcValue'))]",
            "resourceGroup": "[variables('resourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service-v2.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('supportAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedBackEndAppServicePlanName')]"
