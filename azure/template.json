            "name": "[concat(variables('apiAppServiceName'), '-application-insights-', parameters('utcValue'))]",
            "resourceGroup": "[variables('resourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('apiAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('apiAppServiceName')]"
                    }
                }
            }
        },
        {
            "condition": "[greater(length(parameters('apiAppCustomHostName')), 0)]",
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('apiAppServiceName'), '-app-service-certificate-', parameters('utcValue'))]",
            "resourceGroup": "[parameters('sharedEnvResourceGroup')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-certificate.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultCertificateName": {
                        "value": "[parameters('apiAppCertificateName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('sharedKeyVaultName')]"
                    },
                    "keyVaultResourceGroup": {
                        "value": "[parameters('sharedManagementResourceGroup')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('apiAppServiceName'), '-', parameters('utcValue'))]",
            "resourceGroup": "[variables('resourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service-v2.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('apiAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedBackEndAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('sharedEnvResourceGroup')]"
                    },
                    "subnetResourceId": {
                        "value": "[parameters('sharedBackEndSubnetResourceId')]"
                    },
                    "appServiceAppSettings": {
                        "value": {
                            "array": [
                                {
                                    "name": "ConfigurationStorageConnectionString",
                                    "value": "[parameters('configurationStorageConnectionString')]"
                                },
                                {
                                    "name": "EnvironmentName",
                                    "value": "[parameters('environmentName')]"
                                },
                                {
                                    "name": "LoggingRedisConnectionString",
                                    "value": "[parameters('loggingRedisConnectionString')]"
                                },
                                {
                                    "name": "LoggingRedisKey",
                                    "value": "[parameters('loggingRedisKey')]"
                                },
                                {
                                    "name": "InstrumentationKey",
                                    "value": "[reference(concat(variables('apiAppServiceName'), '-application-insights-', parameters('utcValue'))).outputs.InstrumentationKey.value]"
                                },
                                {
                                    "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                                    "value": "[reference(concat(variables('apiAppServiceName'), '-application-insights-', parameters('utcValue'))).outputs.ConnectionString.value]"
                                },                                
                                {
                                    "name": "idaAudience",
                                    "value": "[parameters('idaAudience')]"
                                },
                                {
                                    "name": "idaTenant",
                                    "value": "[parameters('idaTenant')]"
                                }
                            ]
                        }
                    },
                    "customHostName": {
                        "value": "[parameters('apiAppCustomHostName')]"
                    },
                    "certificateThumbprint": {
                        "value": "[if(greater(length(parameters('apiAppCustomHostName')), 0), reference(concat(variables('apiAppServiceName'), '-app-service-certificate-', parameters('utcValue')), '2018-11-01').outputs.certificateThumbprint.value, '')]"
                    },
                    "ipSecurityRestrictions": {
                        "value": "[parameters('backEndAccessRestrictions')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('webAppServiceName'), '-application-insights-', parameters('utcValue'))]",
            "resourceGroup": "[variables('resourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('webAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('webAppServiceName')]"
                    }
                }
            }
        },
        {
            "condition": "[greater(length(parameters('webAppCustomHostName')), 0)]",
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('webAppServiceName'), '-app-service-certificate-', parameters('utcValue'))]",
            "resourceGroup": "[parameters('sharedEnvResourceGroup')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-certificate.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultCertificateName": {
                        "value": "[parameters('webAppCertificateName')]"
